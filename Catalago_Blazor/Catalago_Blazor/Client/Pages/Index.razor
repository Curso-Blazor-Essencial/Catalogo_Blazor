@page "/"

<PageTitle>Index</PageTitle>

<h1>Catálogo de Produtos</h1>
<hr />
<h2> Lojinha do Fantasma Camarada</h2>

<AuthorizeView>
    <Authorized>
        <h2>
            Olá, @context.User.Identity.Name!
            <br/>
            @if(context.User.IsInRole("Admin"))
            {
                <text> Usuário Admin</text>
            }
        </h2>
    </Authorized>
    <NotAuthorized>
        <h2>
            Usuário não autorizado!
        </h2>
    </NotAuthorized>
</AuthorizeView>